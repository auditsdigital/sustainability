{
    "compilerOptions": {
      "rootDir": "./src",
      "outDir": "./build",
      "target": "es2016",
      "lib": ["es2017", "dom"],
      "module": "commonjs",
      "moduleResolution":"Node",
      "types": [
        "node",
        "jest"
      ],
      "strict": true,
      "noImplicitReturns":true,
      "declaration": true,
      "skipLibCheck":true,
    },
    "include": [
        "./src/**/*"
    ]
}

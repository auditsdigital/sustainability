{
    "compilerOptions": {
      "rootDir": "./src",
      "outDir": "./build",
      "target": "es2018",
      "lib": ["es2020", "dom"],
      "module": "commonjs",
      "moduleResolution":"node",
      "types": [
        "node",
        "jest"
      ],
      "strict": true,
      "noImplicitReturns":true,
      "declaration": true,
      "skipLibCheck":true,
      "allowSyntheticDefaultImports": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude" : [
      "./src/index-dev.ts"
    ]
}
